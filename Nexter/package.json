{
  "name": "Nexter",
  "version": "1.0.0",
  "description": "Nexter webpage",
  "main": "index.js",
  "scripts": {
    "watch:sass": "sass sass/main.scss:css/style.css --watch --no-source-map",
    "devserver": "live-server ",
    "start": "npm-run-all --parallel devserver watch:sass",
    "compile:sass": "sass sass/main.scss:css/style.css --style=compressed --no-source-map",
    "build:css": "npm-run-all compile:sass"
  },
  "author": "Judy Kiley",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^7.1.4",
    "concat": "^1.0.3",
    "npm-run-all": "^4.1.1",
    "postcss-cli": "^4.1.1",
    "sass": "^1.52.3"
  }
}
